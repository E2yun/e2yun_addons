<?xml version="1.0" ?>
<odoo>

    <record id="partner_agreement_clause_pad_form" model="ir.ui.view">
      <field name="name">Agreement clause pad Form</field>
      <field name="model">agreement.clause</field>
      <field name="inherit_id" ref="agreement.partner_agreement_clause_form_view"/>
      <field name="arch" type="xml">
        <field name="content" position="replace">
           <field name="clause_pad_url" widget="pad" class="oe_memo"/>
            <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
            </div>
        </field>

      </field>
    </record>

</odoo>
